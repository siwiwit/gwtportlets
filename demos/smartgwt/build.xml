<!--

Build instructions:

For all demos:

Edit build.properties in the root of the distribution to match your
environment (GWT installation directory etc.). Then run "ant" (no args)
in the root of the distribution to copy build.properties and required jar
files to all the demos.

Run "ant -p" from the demo directory to see available targets.

Note that the source displayed by the SourceBrowserPortlet is generated by
running 'ant java2html' in the root of the distribution. If this is not done
the demo will still run but no source will be displayed.

-->
<project name="smartgwt" default="hosted" basedir=".">

    <property file="build.properties"/>

    <property name="gwt.sdk" value=""/>
    <property name="gwtc.style" value="PRETTY"/>
    <property name="smartgwt.sdk" value=""/>

    <path id="cp">
        <fileset dir="war/WEB-INF/lib" includes="*.jar"/>
        <fileset dir="${gwt.sdk}" includes="gwt-user.jar,gwt-servlet.jar"/>
        <fileset dir="${smartgwt.sdk}" includes="smartgwt.jar,smartgwt-skins.jar"/>
    </path>

    <path id="dev-cp">
        <pathelement path="src"/>
        <path refid="cp"/>
        <fileset dir="lib-hosted" includes="*.jar"/>
        <fileset dir="${gwt.sdk}" includes="gwt-dev*.jar"/>
    </path>

    <property name="classes" value="war/WEB-INF/classes"/>

    <tstamp/>

    <target name="clean" description="Nuke all generated files">
        <delete dir="${classes}"/>
        <delete dir="src" includes="**/*.class"/>
        <delete dir="war/smartgwt"/>
        <delete dir="war/src"/>
        <delete dir="war/WEB-INF/lib" includes="gwt-servlet.jar"/>
        <delete dir="war/WEB-INF/lib" includes="smartgwt.jar"/>
        <delete file="smartgwt.war"/>
    </target>

    <target name="javac" depends="check-props" description="Generate classes">
        <mkdir dir="${classes}"/>
        <copy todir="war/WEB-INF/lib">
            <fileset dir="${gwt.sdk}" includes="gwt-servlet.jar"/>
            <fileset dir="${smartgwt.sdk}" includes="smartgwt.jar"/>
        </copy>
        <copy todir="war/WEB-INF/classes">
            <fileset dir="." includes="log4j.properties"/>
        </copy>
        <javac srcdir="src" destdir="${classes}" debug="true" classpathref="cp"/>
        <copy todir="${classes}">
            <fileset dir="src" excludes="**/*.java"/>
        </copy>
    </target>

    <target name="gwtc" depends="javac,check-if-gwtc-needed" unless="skip.gwtc">
        <java fork="true" failonerror="true" classpathref="dev-cp"
              classname="com.google.gwt.dev.Compiler" maxmemory="256m">
            <jvmarg value="-Xss16M"/>
            <arg value="-style"/>
            <arg value="${gwtc.style}"/>
            <arg value="smartgwt.Main"/>
        </java>
    </target>

    <target name="hosted" description="Run demo in hosted mode" depends="javac">
        <java fork="true" failonerror="true" classpathref="dev-cp"
              classname="com.google.gwt.dev.DevMode">
            <arg value="-startupUrl"/>
            <arg value="/"/>
            <arg value="smartgwt.Main"/>
            <arg value="-whitelist"/>
            <arg value="^http[:][/][/]www[.]gmodules[.]com"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xnoagent"/>
            <jvmarg value="-Djava.compiler=NONE"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5005"/>
            <jvmarg value="-Xms128m"/>
            <jvmarg value="-Xmx512m"/>
        </java>
    </target>

    <target name="hosted-noserver" description="Run demo in hosted mode with -noserver" depends="javac">
        <java fork="true" failonerror="true" classpathref="dev-cp"
              classname="com.google.gwt.dev.DevMode">
            <arg value="-noserver"/>
            <arg value="-port"/>
            <arg value="8080"/>
            <arg value="-startupUrl"/>
            <arg value="smartgwt/"/>
            <arg value="smartgwt.Main"/>
            <arg value="-whitelist"/>
            <arg value="^http[:][/][/]www[.]gmodules[.]com"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xnoagent"/>
            <jvmarg value="-Djava.compiler=NONE"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5005"/>
            <jvmarg value="-Xms128m"/>
            <jvmarg value="-Xmx512m"/>
        </java>
    </target>

    <target name="deploy" description="Deploy demo to Tomcat" depends="gwtc">
        <copy file="smartgwt.xml" overwrite="true"
              todir="${tomcat.home}/conf/Catalina/localhost">
            <filterset>
                <filter token="DOCBASE" value="${basedir}/war"/>
            </filterset>
        </copy>
    </target>

    <target name="war" depends="gwtc" description="Create smartgwt.war">
        <war destfile="smartgwt.war" basedir="war"/>
    </target>

    <target name="check-if-gwtc-needed" unless="skip.gwtc">
        <dependset>
            <srcfileset dir="war/WEB-INF/lib" includes="*.jar"/>
            <srcfileset dir="src/smartgwt">
                <include name="*.gwt.xml"/>
                <include name="client/**"/>
            </srcfileset>
            <targetfileset dir="war" includes="smartgwt/smartgwt.nocache.js"/>
        </dependset>
        <available property="skip.gwtc" file="war/smartgwt/smartgwt.nocache.js"/>
    </target>

    <target name="check-props">
        <available property="build.properties.exists" file="build.properties"/>
        <fail unless="build.properties.exists">
            build.properties does not exist - please edit build.properties in the root
            of this distribution and then run 'ant' to copy it to this demo
        </fail>
        <available property="gwt-portlets.exists" file="war/WEB-INF/lib/gwt-portlets.jar"/>
        <fail unless="gwt-portlets.exists">
            war/WEB-INF/lib/gwt-portlets.jar does not exist - please run 'ant' in the root
            of this distribution to copy it to this demo
        </fail>
        <available property="gwt-portlets-smartgwt.exists" file="war/WEB-INF/lib/gwt-portlets-smartgwt.jar"/>
        <fail unless="gwt-portlets-smartgwt.exists">
            war/WEB-INF/lib/gwt-portlets-smartgwt.jar does not exist - please run 'ant' in the root
            of this distribution to copy it to this demo
        </fail>
        <available property="gwt.sdk.exists" file="${gwt.sdk}"/>
        <fail unless="gwt.sdk.exists"
              message="gwt.sdk does not exist: ${gwt.sdk}"/>
        <fail message="smartgwt.sdk not set in build.properties">
            <condition>
                <equals arg1="${smartgwt.sdk}" arg2=""/>
            </condition>
        </fail>
        <available property="smartgwt.sdk.exists" file="${smartgwt.sdk}"/>
        <fail unless="smartgwt.sdk.exists"
              message="smartgwt.sdk does not exist: ${smartgwt.sdk}"/>
    </target>

    <target name="smartgwt jar">
        <ant dir="../../" target="jar-smartgwt" inheritall="false"/>
        <ant dir="../../" target="copy-files-to-demos" inheritall="false"/>
    </target>

</project>
